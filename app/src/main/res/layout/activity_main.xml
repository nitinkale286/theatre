<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:id="@+id/tv_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trader's Diary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Not Rolled P&L Card -->
            <LinearLayout
                android:id="@+id/card_pnl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_pnl_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net P and L"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_total_pnl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹ 2,193.10"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_month_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="for Dec 2025"
                    android:textSize="12sp"
                    android:textColor="#999999" />

            </LinearLayout>

            <!-- Table with Horizontal Numbers -->
            <LinearLayout
                android:id="@+id/layout_stats_numbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/table_row_background"
                android:layout_marginBottom="24dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_trading_days"

                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="23"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#FFFFFF" />

                <TextView
                    android:id="@+id/tv_added_on"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="17"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#FFFFFF" />

                <TextView
                    android:id="@+id/tv_product_days"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="12"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#FFFFFF" />

                <TextView
                    android:id="@+id/tv_winnings_struck"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#FFFFFF" />

            </LinearLayout>

            <!-- Table Headers Below Numbers -->
            <LinearLayout
                android:id="@+id/layout_stats_headers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="8dp"
                android:paddingHorizontal="8dp">

                <TextView
                    android:id="@+id/tv_header_trading_days"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="All Month Days"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tv_header_added_on"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Trade On"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tv_header_product_days"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="IIn Profit"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tv_header_winnings_struck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Winnings Strick"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:textAlignment="center" />

            </LinearLayout>

            <!-- Most Profitable Days Header -->
            <TextView
                android:id="@+id/tv_most_profitable_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Most Profitable Days"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <!-- Most Profitable Days Container -->
            <LinearLayout
                android:id="@+id/layout_most_profitable_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">
                <!-- These will be added dynamically -->
            </LinearLayout>

            <!-- Divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="24dp" />


            <!-- Month Selector -->
            <LinearLayout
                android:id="@+id/layout_month_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btn_prev_month"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_left"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Previous Month" />

                <TextView
                    android:id="@+id/tv_month_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="December 2025"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_marginHorizontal="16dp" />

                <ImageButton
                    android:id="@+id/btn_next_month"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Next Month" />

            </LinearLayout>

            <!-- Calendar Table Container -->
            <LinearLayout
                android:id="@+id/calendar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/calendar_background"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Week Days Header - Starting from Monday -->
                <LinearLayout
                    android:id="@+id/layout_week_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_monday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_tuesday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="T"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_wednesday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="W"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_thursday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="T"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_friday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="F"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_saturday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="S"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_sunday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="S"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Week 1 -->
                <LinearLayout
                    android:id="@+id/layout_week1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                </LinearLayout>

                <!-- Week 2 -->
                <LinearLayout
                    android:id="@+id/layout_week2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                </LinearLayout>

                <!-- Week 3 -->
                <LinearLayout
                    android:id="@+id/layout_week3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                </LinearLayout>

                <!-- Week 4 -->
                <LinearLayout
                    android:id="@+id/layout_week4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                </LinearLayout>

                <!-- Week 5 -->
                <LinearLayout
                    android:id="@+id/layout_week5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                </LinearLayout>

                <!-- Week 6 (for months with 6 weeks) -->
                <LinearLayout
                    android:id="@+id/layout_week6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_profitable_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/icon_profitable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”µ"
                    android:textSize="16sp"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:id="@+id/tv_profitable_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You are Profitable for "
                    android:textSize="14sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_profitable_days_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/17 Traded Days"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3" />

            </LinearLayout>

            <!-- Transactions Header -->
            <TextView
                android:id="@+id/tv_transactions_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="December 2025"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Transaction Items Container -->
            <LinearLayout
                android:id="@+id/layout_transaction_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- These will be added dynamically -->
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:contentDescription="Add New Entry"
        android:src="@drawable/ic_add"
        app:backgroundTint="#2196F3"
        app:elevation="8dp"
        app:fabSize="normal"
        app:tint="#FFFFFF" />

</RelativeLayout>