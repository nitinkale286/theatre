<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App Theme -->
    <style name="Theme.TradersDiary" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">#F2F2F2</item>
    </style>

    <!-- Card Style -->
    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/bg_card</item>
    </style>

    <!-- Sub Text -->
    <style name="SubText">
        <item name="android:textColor">#777777</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Stat Box -->
    <style name="StatBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Calendar Headers -->
    <style name="DayHeader">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#888888</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Calendar Day States -->
    <style name="DayWin">
        <item name="android:background">@drawable/day_win</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#2E7D32</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="DayLoss">
        <item name="android:background">@drawable/day_loss</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#C62828</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="DayNeutral">
        <item name="android:background">@drawable/day_neutral</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#777777</item>
        <item name="android:padding">10dp</item>
    </style>



</resources>
